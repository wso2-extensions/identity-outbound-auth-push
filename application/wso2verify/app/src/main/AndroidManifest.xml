<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="org.wso2.carbon.identity.mobile.wso2verify">

    <uses-permission android:name="android.permission.USE_BIOMETRIC"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
            android:allowBackup="true"
            android:icon="@mipmap/ic_launcher_fingerprint"
            android:label="@string/app_name"
            android:networkSecurityConfig="@xml/network_security_config1"
            android:roundIcon="@mipmap/ic_launcher"
            android:supportsRtl="true"
            android:theme="@style/AppTheme"
            android:usesCleartextTraffic="true">
        <activity android:name="org.wso2.carbon.identity.mobile.wso2verify.AuthenticateActivity">
            <intent-filter>
                <action android:name="AuthenticateActivity"></action>
                <category android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity android:name="org.wso2.carbon.identity.mobile.wso2verify.SuccessActivity"
                  android:parentActivityName="org.wso2.carbon.identity.mobile.wso2verify.MainActivity"/>
        <activity android:name="org.wso2.carbon.identity.mobile.wso2verify.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>
                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>

        <service android:name="org.wso2.carbon.identity.mobile.wso2verify.MyFirebaseMessagingService">
            <intent-filter>
                <action android:name="com.google.firebase.MESSAGING_EVENT"/>
            </intent-filter>
            <meta-data
                    android:name="org.google.firebase.messaging.default_notification_channel_id"
                    android:value="@string/default_notification_channel_id"/>
        </service>
        <service android:name="org.wso2.carbon.identity.mobile.wso2verify.MyFirebaseInstanceIDService">
            <intent-filter>
                <action android:name="com.google.firebase.INSTANCE_ID_EVENT"/>
            </intent-filter>
        </service>

    </application>
</manifest>
